<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="325dp"
        android:background="@drawable/formato_dashboard"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/iv_dash_foto_perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_dash_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Susanna Hoffts "
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dash_profissao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Singer "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        //horizontal -> pai dos filhos

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_valores"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/tv_dash_imc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="25.7"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_dash_ncd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1980"

                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_dash_idade"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="49"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_dash_peso"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="67"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_dash_altura"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1.72"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">


            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IMC"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NCD"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"/>

                <TextView
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IDADE"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PESO"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ALTURA"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"/>

        </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/pesarAgora"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/formato_edit_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:id="@+id/imagem"
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/balanca_logo"/>

        <TextView
            android:id="@+id/pesar_agora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Pesar agora"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/acompanhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Acompanhe o seu peso."
            android:textSize="15sp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/formato_edit_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:id="@+id/img"
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_align_vertical_bottom_24"/>

        <TextView
            android:id="@+id/historico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ver histÃ³rico"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/reveja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Reveja suas conquistas."
            android:textSize="15sp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>

    </LinearLayout>



