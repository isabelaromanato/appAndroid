<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:cardBackgroundColor="@color/pink"
        app:cardCornerRadius="60dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user2"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/montserrat"
        android:text="Trocar Foto"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="190dp"
        android:drawableStart="@drawable/senhaa"
        android:fontFamily="@font/montserrat"
        android:hint="Dados para autenticação"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat"
        android:hint="Email"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/edit_text_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat"
        android:hint="Senha"
        android:textSize="18sp"
        android:maxLength="8"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="330dp"
        android:drawableStart="@drawable/senhaa"
        android:fontFamily="@font/montserrat"
        android:hint="Dados pessoais"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_text_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat"
        android:hint="Nome"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_text_profissao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat"
        android:hint="Profissão"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_text_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat"
        android:hint="Altura"
        android:textSize="18sp" />

    <EditText

        android:id="@+id/et_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento"
        android:layout_marginTop="490dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp" />


    <RadioButton
        android:id="@+id/radio_feminino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="560dp"
        android:fontFamily="@font/montserrat"
        android:text="Feminino"
        android:textSize="18sp"
        android:focusable="false"/>

    <RadioButton
        android:id="@+id/radio_masculino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="560dp"
        android:fontFamily="@font/montserrat"
        android:text="Masculino"
        android:textSize="18sp"
        android:focusable="false"/>

<!--    <EditText-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="25dp"-->
<!--        android:layout_marginTop="560dp"-->
<!--        android:layout_marginEnd="20dp"-->
<!--        android:fontFamily="@font/montserrat"-->
<!--        android:textSize="20sp" />-->

</RelativeLayout>

